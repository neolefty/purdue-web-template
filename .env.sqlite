# SQLite configuration for testing deployment
# This uses SQLite which requires no database server setup

# Django settings
SECRET_KEY=test-secret-key-change-in-real-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,django-template-dev.ag.purdue.edu

# Database configuration - using SQLite for testing
DATABASE_ENGINE=sqlite
DB_NAME=/opt/apps/template/data/db.sqlite3

# Authentication method
AUTH_METHOD=email

# CORS settings
CORS_ALLOWED_ORIGINS=https://django-template-dev.ag.purdue.edu

# Django settings module
DJANGO_SETTINGS_MODULE=config.settings.production
