# Production environment settings for django-react-template
# DO NOT OVERWRITE /opt/apps/template/.env with this file directly!
# This is a template for production settings.

# Django settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=django-react-template.ag.purdue.edu

# Database configuration - SQLite for this deployment
DATABASE_ENGINE=sqlite
DB_NAME=/opt/apps/template/data/db.sqlite3

# Authentication method
AUTH_METHOD=email

# CORS settings - Frontend served from same domain
CORS_ALLOWED_ORIGINS=https://django-react-template.ag.purdue.edu

# Email settings for Purdue SMTP
EMAIL_HOST=smtp.purdue.edu
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@purdue.edu

# CSRF settings for production
CSRF_TRUSTED_ORIGINS=https://django-react-template.ag.purdue.edu
